ion-view(title='{{note.title}}')
  ion-content(has-header='true', padding='true')
    ion-list
      .item.item-divider Body
      .item {{note.body}}
      .item.item-divider Tags
      .item
        .tag(ng-repeat='tag in note.tagNames'): a(href='#/tab/notes?filter={{tag}}') {{tag}}
      .item.item-divider Photos
      .item.item-image(ng-repeat='url in note.photos')
        img(ng-src='{{url}}')
        p &nbsp;
